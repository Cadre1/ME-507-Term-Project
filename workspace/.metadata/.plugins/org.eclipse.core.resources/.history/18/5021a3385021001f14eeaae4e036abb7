#ifndef INC_PHOTORESISTOR_DRIVER_H_
#define INC_PHOTORESISTOR_DRIVER_H_

#include <stdio.h>
#include <stdint.h>

// Vector object data structure
struct{
	ADC_HandleTypeDef* photo1_adc;
	ADC_HandleTypeDef* photo2_adc;
	ADC_HandleTypeDef* photo3_adc;
	ADC_HandleTypeDef* photo4_adc;
} typedef Photoresistor_DriverTypeDef;

void enable_photoresistor(PhotoresistorTypeDef* photo);
void disable_photoresistor(PhotoresistorTypeDef* photo);
uint32_t get_adc_value(PhotoresistorTypeDef* photo, uint8_t num);
uint32_t get_adc_diff(PhotoresistorTypeDef* con, uint8_t num1, uint8_t num2);


#endif /* INC_PHOTORESISTOR_DRIVER_H_ */
