#ifndef INC_GYROSCOPE_DRIVER_H_
#define INC_GYROSCOPE_DRIVER_H_

#include <stdio.h>
#include <stdint.h>
#include "stm32f4xx_hal.h"

// Gyroscope_driver object data structure
struct{
	TIM_HandleTypeDef* tim_handle;
	uint32_t tim_channel1;
	uint32_t tim_channel2;
	uint16_t IC_Rise;
	uint16_t IC_Fall;
	uint16_t IC_Diff;
	uint16_t pulse_width;
	uint16_t tol;
	int pulse_recieve_flag;
	int rise_flag;
} typedef Gyroscope_DriverTypeDef;

void start_get_adc_values(Gyroscope_DriverTypeDef* photo);
uint32_t* get_adc_values(Gyroscope_DriverTypeDef* photo);

#endif /* INC_GYROSCOPE_DRIVER_H_ */
